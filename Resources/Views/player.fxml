<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>

<Pane maxHeight="-Infinity"
      maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity"
      prefHeight="400.0"
      prefWidth="600.0"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Mule.Controllers.PlayerController">
   <children>
      <ChoiceBox fx:id="playerRace" layoutX="374.0" layoutY="173.0" prefHeight="25.0" prefWidth="149.0" value="Mechtron">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="Packer" />
               <String fx:value="Sheroid" />
               <String fx:value="Humanoid" />
               <String fx:value="Leggite" />
               <String fx:value="Flapper" />
               <String fx:value="Bonzoid" />
               <String fx:value="Mechtron" />
               <String fx:value="Gollumer" />
            </FXCollections>
         </items>
      </ChoiceBox>
      <!--<Label fx:id="playerNumber" layoutX="78.0" layoutY="40.0" text="Mule.Models.Player 1"> -->
      <Label fx:id="playerNumber" layoutX="91.0" layoutY="44.0" text="${PlayerController.whichPlayer}">
         <font>
            <Font name="System Bold" size="52.0" />
         </font>
      </Label>
      <Label layoutX="431.0" layoutY="140.0" text="Mule.Models.Race" />
      <ColorPicker fx:id="playerColor" layoutX="374.0" layoutY="263.0" prefHeight="25.0" prefWidth="149.0" />
      <Button layoutX="314.0" layoutY="321.0" mnemonicParsing="false" onAction="#submit" text="Confirm">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button layoutX="234.0" layoutY="321.0" mnemonicParsing="false" onAction="#back" text="Back">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Label layoutX="430.0" layoutY="234.0" text="Color" />
      <Label layoutX="429.0" layoutY="81.0" text="Name" />
      <TextField fx:id="playerName" layoutX="375.0" layoutY="104.0" />
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="78.0" layoutY="140.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Sprites/M.U.L.E..png" />
         </image>
      </ImageView>
   </children>
</Pane>
